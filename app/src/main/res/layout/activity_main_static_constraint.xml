<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/multiple_photos_avatar"
            style="@style/avatar_image_view"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:src="@drawable/avatar1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/multiple_photos_name"
            style="@style/text_normal_blue_bold"
            android:layout_marginStart="@dimen/padding_medium"
            android:text="Jan Kowalski"
            app:layout_constraintBottom_toTopOf="@id/multiple_photos_time"
            app:layout_constraintLeft_toRightOf="@id/multiple_photos_avatar"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_avatar"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/multiple_photos_with"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_medium"
            android:text="z:"
            app:layout_constraintLeft_toRightOf="@id/multiple_photos_name"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_name" />

        <TextView
            android:id="@+id/multiple_photos_friend_name"
            style="@style/text_normal_blue_bold"
            android:layout_marginStart="@dimen/padding_medium"
            android:text="Grzegorz Nowak"
            app:layout_constraintLeft_toRightOf="@id/multiple_photos_with"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_name" />

        <TextView
            android:id="@+id/multiple_photos_time"
            style="@style/text_normal_grey_light"
            android:text="23 godziny temu"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_avatar"
            app:layout_constraintStart_toStartOf="@id/multiple_photos_name"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_name" />

        <TextView
            android:id="@+id/multiple_photos_description"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="Fotki z dzisiejszego wyjazdu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_avatar" />

        <ImageView
            android:id="@+id/multiple_photos_image_left"
            style="@style/default_image_view"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/padding_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/landspace4"
            app:layout_constraintEnd_toStartOf="@id/multiple_photos_image_right1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_description" />

        <ImageView
            android:id="@+id/multiple_photos_image_right1"
            style="@style/default_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/padding_small_half"
            android:scaleType="centerCrop"
            android:src="@drawable/landspace1"
            app:layout_constraintBottom_toTopOf="@id/multiple_photos_image_right2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/multiple_photos_image_left"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_image_left"
            app:layout_constraintVertical_chainStyle="packed" />

        <ImageView
            android:id="@+id/multiple_photos_image_right2"
            style="@style/default_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_small_half"
            android:scaleType="centerCrop"
            android:src="@drawable/landspace2"
            app:layout_constraintBottom_toTopOf="@id/multiple_photos_image_right3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/multiple_photos_image_right1"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_image_right1" />

        <ImageView
            android:id="@+id/multiple_photos_image_right3"
            style="@style/default_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/padding_small_half"
            android:scaleType="centerCrop"
            android:src="@drawable/landspace3"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_image_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/multiple_photos_image_right1"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_image_right2" />

        <TextView
            android:id="@+id/multiple_photos_like_count"
            style="@style/text_normal_grey_light"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="Stefan Kowalski i 14 inn..."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_image_left" />

        <View
            android:id="@+id/multiple_photos_bottom_divider_horizontal"
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/padding_default"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_like_count" />

        <ImageView
            android:id="@+id/multiple_photos_like_icon"
            style="@style/default_image_view"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/multiple_photos_like_count_bottom"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_bottom_divider_vertical_left" />

        <TextView
            android:id="@+id/multiple_photos_like_count_bottom"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_small"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintStart_toEndOf="@id/multiple_photos_like_icon"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_bottom_divider_vertical_left" />

        <View
            android:id="@+id/multiple_photos_bottom_divider_vertical_left"
            style="@style/divider_vertical"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@id/multiple_photos_bottom_divider_vertical_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_bottom_divider_horizontal" />

        <ImageView
            android:id="@+id/multiple_photos_comments_icon"
            style="@style/default_image_view"
            android:src="@drawable/comments"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/multiple_photos_comments_count"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_bottom_divider_vertical_left" />

        <TextView
            android:id="@+id/multiple_photos_comments_count"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_small"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/multiple_photos_bottom_divider_vertical_right"
            app:layout_constraintStart_toEndOf="@id/multiple_photos_comments_icon"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_bottom_divider_vertical_left" />

        <View
            android:id="@+id/multiple_photos_bottom_divider_vertical_right"
            style="@style/divider_vertical"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_bottom_divider_vertical_left" />

        <ImageView
            android:id="@+id/multiple_photos_share_icon"
            style="@style/default_image_view"
            android:src="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@id/multiple_photos_bottom_divider_vertical_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/multiple_photos_bottom_divider_vertical_right"
            app:layout_constraintTop_toTopOf="@id/multiple_photos_bottom_divider_vertical_left" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_avatar"
            style="@style/avatar_image_view"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:src="@drawable/avatar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/multiple_photos_share_icon" />

        <TextView
            android:id="@+id/photo_name"
            style="@style/text_normal_blue_bold"
            android:layout_marginStart="@dimen/padding_medium"
            android:text="Sebastian Bąk"
            app:layout_constraintBottom_toTopOf="@id/photo_time"
            app:layout_constraintLeft_toRightOf="@id/photo_avatar"
            app:layout_constraintTop_toTopOf="@id/photo_avatar"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/photo_time"
            style="@style/text_normal_grey_light"
            android:text="5 godzin temu"
            app:layout_constraintBottom_toBottomOf="@id/photo_avatar"
            app:layout_constraintStart_toStartOf="@id/photo_name"
            app:layout_constraintTop_toBottomOf="@id/photo_name" />

        <TextView
            android:id="@+id/photo_description"
            style="@style/text_normal"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:layout_marginEnd="@dimen/padding_medium"
            android:text="Takie zdjęcie udało mi się ustrzelić, chłopaki na forum fotograficznym będą zadrościć."
            app:layout_constraintEnd_toEndOf="@dimen/padding_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_avatar" />

        <ImageView
            android:id="@+id/photo_image"
            style="@style/default_image_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/padding_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/landspace1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_description" />

        <TextView
            android:id="@+id/photo_like_count"
            style="@style/text_normal_grey_light"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="Tytus Bomba i 14 inn..."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_image" />

        <View
            android:id="@+id/photo_bottom_divider_horizontal"
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/padding_default"
            app:layout_constraintTop_toBottomOf="@id/photo_like_count" />

        <ImageView
            android:id="@+id/photo_like_icon"
            style="@style/default_image_view"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/photo_like_count_bottom"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/photo_bottom_divider_vertical_left" />

        <TextView
            android:id="@+id/photo_like_count_bottom"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_small"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintStart_toEndOf="@id/photo_like_icon"
            app:layout_constraintTop_toTopOf="@id/photo_bottom_divider_vertical_left" />

        <View
            android:id="@+id/photo_bottom_divider_vertical_left"
            style="@style/divider_vertical"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@id/photo_bottom_divider_vertical_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_bottom_divider_horizontal" />

        <ImageView
            android:id="@+id/photo_comments_icon"
            style="@style/default_image_view"
            android:src="@drawable/comments"
            app:layout_constraintBottom_toBottomOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/photo_comments_count"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintTop_toTopOf="@id/photo_bottom_divider_vertical_left" />

        <TextView
            android:id="@+id/photo_comments_count"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_small"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/photo_bottom_divider_vertical_right"
            app:layout_constraintStart_toEndOf="@id/photo_comments_icon"
            app:layout_constraintTop_toTopOf="@id/photo_bottom_divider_vertical_left" />

        <View
            android:id="@+id/photo_bottom_divider_vertical_right"
            style="@style/divider_vertical"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintTop_toTopOf="@id/photo_bottom_divider_vertical_left" />

        <ImageView
            android:id="@+id/photo_share_icon"
            style="@style/default_image_view"
            android:src="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@id/photo_bottom_divider_vertical_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/photo_bottom_divider_vertical_right"
            app:layout_constraintTop_toTopOf="@id/photo_bottom_divider_vertical_left" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/event_avatar"
            style="@style/avatar_image_view"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:src="@drawable/avatar3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_share_icon" />

        <TextView
            android:id="@+id/event_name"
            style="@style/text_normal_blue_bold"
            android:layout_marginStart="@dimen/padding_medium"
            android:text="Kamil Wiśniewski"
            app:layout_constraintBottom_toTopOf="@id/event_time"
            app:layout_constraintLeft_toRightOf="@id/event_avatar"
            app:layout_constraintTop_toTopOf="@id/event_avatar"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/event_time"
            style="@style/text_normal_grey_light"
            android:text="12 godzin temu"
            app:layout_constraintBottom_toBottomOf="@id/event_avatar"
            app:layout_constraintStart_toStartOf="@id/event_name"
            app:layout_constraintTop_toBottomOf="@id/event_name" />

        <TextView
            android:id="@+id/event_description"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="Zapraszam wszystkich serdecznie na mój ostatni w tym roku koncert"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_avatar" />

        <ImageView
            android:id="@+id/event_image"
            style="@style/default_image_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/padding_medium"
            android:scaleType="centerCrop"
            android:src="@drawable/event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_description" />

        <TextView
            android:id="@+id/event_month"
            style="@style/text_normal_red_dark"
            android:layout_marginStart="@dimen/padding_default"
            android:text="WRZ"
            app:layout_constraintBottom_toTopOf="@id/event_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_event_name"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/event_day"
            style="@style/text_normal_bold"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/event_event_place"
            app:layout_constraintEnd_toEndOf="@id/event_month"
            app:layout_constraintStart_toStartOf="@id/event_month"
            app:layout_constraintTop_toBottomOf="@id/event_month" />

        <TextView
            android:id="@+id/event_event_name"
            style="@style/text_normal_bold"
            android:layout_marginStart="@dimen/padding_default"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="Koncert - Kamil Wiśniewski Band"
            app:layout_constraintStart_toEndOf="@id/event_month"
            app:layout_constraintTop_toBottomOf="@id/event_image" />

        <TextView
            android:id="@+id/event_event_date"
            style="@style/text_normal"
            android:text="15 września - 16 września"
            app:layout_constraintStart_toStartOf="@id/event_event_name"
            app:layout_constraintTop_toBottomOf="@id/event_event_name" />

        <TextView
            android:id="@+id/event_event_place"
            style="@style/text_normal"
            android:text="Tauron Arena Kraków"
            app:layout_constraintStart_toStartOf="@id/event_event_name"
            app:layout_constraintTop_toBottomOf="@id/event_event_date" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/event_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="event_day,event_event_place" />

        <TextView
            android:id="@+id/event_like_count"
            style="@style/text_normal_grey_light"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginTop="@dimen/padding_medium"
            android:text="Stefan Kowalski i 14 inn..."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_barrier" />

        <View
            android:id="@+id/event_bottom_divider_horizontal"
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/padding_default"
            app:layout_constraintTop_toBottomOf="@id/event_like_count" />

        <ImageView
            android:id="@+id/event_like_icon"
            style="@style/default_image_view"
            android:src="@drawable/like"
            app:layout_constraintBottom_toBottomOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/event_like_count_bottom"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/event_bottom_divider_vertical_left" />

        <TextView
            android:id="@+id/event_like_count_bottom"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_small"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintStart_toEndOf="@id/event_like_icon"
            app:layout_constraintTop_toTopOf="@id/event_bottom_divider_vertical_left" />

        <View
            android:id="@+id/event_bottom_divider_vertical_left"
            style="@style/divider_vertical"
            android:layout_height="40dp"
            app:layout_constraintEnd_toStartOf="@id/event_bottom_divider_vertical_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_bottom_divider_horizontal" />

        <ImageView
            android:id="@+id/event_comments_icon"
            style="@style/default_image_view"
            android:src="@drawable/comments"
            app:layout_constraintBottom_toBottomOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/event_comments_count"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintTop_toTopOf="@id/event_bottom_divider_vertical_left" />

        <TextView
            android:id="@+id/event_comments_count"
            style="@style/text_normal"
            android:layout_marginStart="@dimen/padding_small"
            android:text="15"
            app:layout_constraintBottom_toBottomOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintEnd_toStartOf="@id/event_bottom_divider_vertical_right"
            app:layout_constraintStart_toEndOf="@id/event_comments_icon"
            app:layout_constraintTop_toTopOf="@id/event_bottom_divider_vertical_left" />

        <View
            android:id="@+id/event_bottom_divider_vertical_right"
            style="@style/divider_vertical"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintTop_toTopOf="@id/event_bottom_divider_vertical_left" />

        <ImageView
            android:id="@+id/event_share_icon"
            style="@style/default_image_view"
            android:src="@drawable/share"
            app:layout_constraintBottom_toBottomOf="@id/event_bottom_divider_vertical_left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_bottom_divider_vertical_right"
            app:layout_constraintTop_toTopOf="@id/event_bottom_divider_vertical_left" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>